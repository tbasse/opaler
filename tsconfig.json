{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./lib",
    "target": "es6",
    "sourceMap": false,
    "declaration": true,
    "lib": ["es2017", "es2016", "es2015", "es5", "dom"],
    "strict": true,
    "stripInternal": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true
  },
  "typeRoots": ["node_modules/@types"],
  "include": ["src"],
  "exclude": [".git", "node_modules", "**/__tests__/*"]
}
